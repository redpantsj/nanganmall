<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bonfire4.nanganmall.Picgo">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="50sp"
            android:background="#ffc4c4c4" >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton10"
                android:src="@drawable/ic_launcher"
                android:background="#ffc5c5c5"
                android:baselineAlignBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="실측발송"
                android:id="@+id/textView16"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/abc_text_size_large_material" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end" >

                <ImageButton
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:id="@+id/imageButton11"
                    android:src="@drawable/ic_action_camera"
                    android:layout_alignParentEnd="false"
                    android:layout_alignParentStart="false"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center_vertical"
                    android:background="#ffc4c4c4"
                    android:padding="5dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="20sp"
            android:layout_marginRight="5sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="실측발송하는 방법"
                android:id="@+id/textView11"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="1. 발송할 문서의 사진을 찍습니다."
                android:id="@+id/textView12"
                android:textSize="@dimen/abc_text_size_medium_material" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="   [상단 카메라버튼으로 찍을 수 있습니다]"
                android:id="@+id/textView13"
                android:textSize="15sp"
                android:layout_marginLeft="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="2. 대리점을 선택합니다."
                android:id="@+id/textView14"
                android:textSize="@dimen/abc_text_size_medium_material" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="   [선택은 저장됩니다]"
                android:id="@+id/textView17"
                android:textSize="15sp"
                android:layout_marginLeft="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="3. 버튼을 누르고 사진을 고르면 전송완료!"
                android:id="@+id/textView15"
                android:textSize="@dimen/abc_text_size_medium_material" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="50sp"
                android:layout_marginTop="10sp">

                <Spinner
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:id="@+id/spinner2"
                    android:layout_weight="2"
                    android:prompt="@string/spinnerPrompt"
                    android:layout_gravity="center|left"
                    android:focusableInTouchMode="false"
                    android:background="#ffd8d9d9"
                    android:padding="5sp"
                    android:textAlignment="center"
                    android:transitionGroup="false"
                    android:spinnerMode="dialog" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="선택/전송"
                    android:id="@+id/button2"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:layout_marginLeft="5sp" />

            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"
                android:layout_gravity="center_horizontal"
                android:adjustViewBounds="true"
                android:layout_weight="1"
                android:layout_margin="10dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/textView10"
                android:layout_marginBottom="0dp"
                android:textSize="@dimen/abc_text_size_medium_material" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
